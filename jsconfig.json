{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "hooks/*": ["hooks/*"],
      "icons/*": ["icons/*"],
      "icons": ["icons/index"],
      "utils/*": ["utils/*"],
      "styles/*": ["styles/*"],
      "layouts/*": ["layouts/*"],
      "constants/*": ["constants/*"],
      "components/*": ["components/*"]
    }
  },
  "include": [
    "src"
  ]
}